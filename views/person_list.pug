extends layout

block content
    .table-responsive
        table.table.table-striped.table-hover.table-bordered.table-margin
            thead
                tr
                    th #
                    th Company
            tbody
                - var count = 0
                each val in person_list
                    tr
                        td(class='count_width') #{++count}
                        td(class='main_width')
                            a(href=val.url) #{val.full_name}
                        td