extends layout

block content
  //h3(class='header-in-center')="Add New Executive"

  form(class='form-style default')(method='POST' action='')
    div.form-group
      label(for='full_name') Full Executive Name
      input#full_name.form-control(type='text', placeholder='' name='full_name' required='true' value=(undefined===person ? '' : person.full_name) )
    div.form-group
      label(for='linkedin') Linkined URL
      input#linkedin.form-control(type='text', placeholder='' name='linkedin' value=(undefined===person ? '' : person.linkedin))
    div.form-group
      label(for='bloomberg') Bloomberg URL
      input#bloomberg.form-control(type='text', placeholder='' name='bloomberg' value=(undefined===person ? '' : person.bloomberg))
    div.form-group
      label(for='portfolio_investment_date') Portfolio Investment Date:
      input#portfolio_investment_date.form-control(type='date', name='portfolio_investment_date' value=(undefined===person ? '' : person.portfolio_investment_date_yyyy_mm_dd) )
    div.form-group
      label(for='date_of_death') Executive Start Date:
      input#date_of_death.form-control(type='date', name='date_of_death' value=(undefined===person ? '' : person.date_of_death_yyyy_mm_dd) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg