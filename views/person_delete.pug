extends layout

block content

  h1 #{title}: #{person.name}
  p= person.lifespan
  
  if person_companys.length
  
    p #[strong Delete the following companys before attempting to delete this person.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Companys
    
      dl
      each company in person_companys
        dt 
          a(href=company.url) #{company.title}
        dd #{company.summary}

  else
    p Do you really want to delete this Person?
    
    form(method='POST' action='')
      div.form-group
        input#personid.form-control(type='hidden',name='personid', required='true', value=person._id )

      button.btn.btn-primary(type='submit') Delete