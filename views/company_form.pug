extends layout

block content
  //h1="Add New Company"

  form(class='form-style')(method='POST' action='')
    div.form-group
      label(for='title') Company Name:
      input#title.form-control(type='text', placeholder='' name='title' required='true' value=(undefined===company ? '' : company.title) )
    div.form-group
        label(for='portfolio_investment_date') Portfolio Investment Date:
        input#portfolio_investment_date.form-control(type='date', name='portfolio_investment_date' value=(undefined === person ? '' : person.portfolio_investment_date_yyyy_mm_dd) )
    div.form-group
      label(for='leadership_url') Leadership URL:
      input#leadership_url.form-control(type='url', placeholder='' name='leadership_url' value=(undefined===company ? '' : company.leadership_url) )
    div.form-group
      label(for='isbn') TitanHouse URL:
      input#isbn.form-control(type='url', placeholder='' name='isbn' value=(undefined===company ? '' : company.isbn) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
