                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/catalog') RESEARCHER
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/catalog') Dashboard
                        li
                            a(href='#') Settings
                        li
                            a(href='#') Profile
                        li
                            a(href='#') Help
                    form.navbar-form.navbar-right
                        input.form-control(type='text', placeholder='Search...')
        .container-fluid
            .row
                .col-sm-3.col-md-2.sidebar
                    ul.nav.nav-sidebar
                        li(class=title=='Firm List'?'active':undefined)
                            a(href='/catalog/firms/')
