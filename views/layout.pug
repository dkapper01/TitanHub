                                span.sr-only (current)
                        li(class=title=='Company List'?'active':undefined)
                            a(href='/catalog/companys/') All Companies
                        li(class=title=='List of Executives'?'active':undefined)
                            a(href='/catalog/persons') All Executives
                        //li
                            //a(href='#') Export
                    ul.nav.nav-sidebar
                        li(class=title=='Create Firm'?'active':undefined)
                            a(href='/catalog/firm/create') New Firm
                        li(class=title=='Create Company'?'active':undefined)
                            a(href='/catalog/company/create/') New Company
                        li(class=title=='Add New Executive'?'active':undefined)
                            a(href='/catalog/person/create') New Executive


        div(class='col-md-9 pushing-over')

          block content

